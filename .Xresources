#include "/home/damndiamond/.Xcolors"

!! styles
!URxvt.background:       [90]#000
!URxvt.background:     #242630  [90]#000
URxvt.background: [80]#23252D
!URxvt.background: #282c34
URxvt.colorUL: #42bff5
URxvt.cursorColor:	    magenta

URxvt.font: xft:Source Code Pro:style=Regular:size=22, xft:DejaVu Sans Mono for Powerline:regular:size=20, xft:TerminessTTF Nerd Font Mono:styleRegular:size=22

URxvt.boldFont: xft:Source Code Pro:style=Bold:size=22, xft:DejaVu Sans Mono for Powerline:bold:size=12, xft:TerminessTTF Nerd Font Mono:style=Bold:size=20

URxvt.italicFont: xft:Source Code Pro:style=Italic:size=22, xft:DejaVu Sans Mono for Powerline:italic:size=20, xft:TerminessTTF Nerd Font Mono:style=Italic:size=22
                    
URxvt.boldItalicFont: xft:Source Code Pro:style=Bold Italic:size=22, xft:DejaVu Sans Mono for Powerline:bold:italic:size=20,  xft:TerminessTTF Nerd Font Mono:style=Bold Italic:size=22

! terminal layout
URxvt.intensityStyles:	false
URxvt.depth:		    32
URxvt.internalBorder:   24
URxvt.scrollBar:	    false
!!! Number of lines that you can scroll back to
URxvt.saveline: 2048
URxvt.cursorBlink: true
URxvt.cursorUnderline: false
URxvt.iso14755: false
URxvt*loginShell:  true


! Common Keybinds for Navigations
!!! Scroll One line (higher // upper)
URxvt.keysym.Shift-Up: command:\033]720;1\007
URxvt.keysym.Shift-Down: command:\033]721;1\007
!!!Go to (previous // next) command
URxvt.keysym.Control-Up: \033[1;5A
URxvt.keysym.Control-Down: \033[1;5B
!!! Jump Word (previous // next)
URxvt.keysym.Control-Left: \033[1;5D
URxvt.keysym.Control-Right: \033[1;5C
!!! Change background color opacity and borders
URxvt.keysym.C-7: command:\033]11;#23252D\007\033]708;#23252D\007
URxvt.keysym.C-8: command:\033]11;[80]#23252D\007\033]708;[80]#23252D\007

!! Extensions
URxvt.perl-ext-common: default,matcher,resize-font,url-select,keyboard-select

! resize-font
URxvt.keysym.Control-minus:     resize-font:smaller
URxvt.keysym.Control-plus:      resize-font:bigger
URxvt.keysym.Control-0:         resize-font:reset
URxvt.keysym.Control-equal:     resize-font:show

! keyboard
URxvt.copyCommand: xclip -i -selection clipboard
URxvt.pasteCommand: xclip -o -selection clipboard
URxvt.keysym.M-c: clipboard:copy
URxvt.keysym.M-v: clipboard:paste

! url-select
URxvt.keysym.M-u: url-select:select_next
URxvt.url-select.launcher: /usr/bin/xdg-open
URxvt.url-select.underline: true

! keyboard-select
URxvt.keysym.M-Escape: keyboard-select:activate
URxvt.keysym.M-s: perl:keyboard-select:search

! matcher
URxvt.url-launcher: /usr/bin/xdg-open
URxvt.matcher.button: 1

!URxvt*borderColor: #23252D
!URxvt.internalBorder: 0


!! Comments Standard Syntax

! = Subsection declaration
!! = New section
!!! = Explanation of command

!! Keysym Names
! C = Control
! S = Shift
! M = Alt
!URxvt.externalBorder: 0px
!URxvt.internalBorder: 0px

